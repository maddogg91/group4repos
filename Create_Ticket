 //method to create a ticket
        public static void Create()
        {

//random is used to create the unique ticket id for each new ticket from 0-99999
            Random rand = new Random();
            int num = rand.Next(0, 99999);
            string pk = num.ToString();
            //Create default ticket
            Ticket default_ticket = new Ticket(pk, "Open", "", "", "", "", "");
            Console.WriteLine("{0} {1}", default_ticket.T_id, default_ticket.Status);
            Console.ReadLine();
            
        }
